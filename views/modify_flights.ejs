    <!-- Section Selection -->
    <h1 id="flighthead">Modify Flights</h1> 

    <% if (results.length === 0) { %>
        <h1 id="bro">Come on bro! ü§¶‚Äç‚ôÇÔ∏è</h1>
        <h1 id="back">Go select a flight and come back</h1>
    <% } else { %> 

        <form action="/modify_flights" method="POST">
            <div class="card">
                <div class="card-body">
                    <table class="table table">
                        <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Source</th>
                            <th scope="col">Destination</th>
                            <th scope="col">Date</th>
                            <th scope="col">Duration</th>
                            <th scope="col">Dep_time</th>
                            <th scope="col">Arr_time</th>
                            <th scope="col">Fare</th>
                        </tr>
                        </thead>
                        <tbody>
                            <% for(var i = 0; i < results.length; i++) { %>
                                <tr>
                                    <input type="hidden" name="flight_id" value="<%= flight_id %>"> 
                                    <td><input class="form-control" name="name" placeholder="Name" value="<%= results[i].name %>"></td>
                                    <td><input class="form-control" name="source" placeholder="Source" value="<%= results[i].source %>"></td>
                                    <td><input class="form-control" name="destination" placeholder="Destination" value="<%= results[i].destination %>"></td>
                                    <td><input class="form-control" name="date" placeholder="Date" value="<%= results[i].date %>"></td>
                                    <td><input class="form-control" name="duration" placeholder="Duration" value="<%= results[i].duration %>"></td>
                                    <td><input class="form-control" name="dep_time" placeholder="dep_time" value="<%= results[i].dep_time %>"></td>
                                    <td><input class="form-control" name="arr_time" placeholder="arr_time" value="<%= results[i].arr_time %>"></td>
                                    <td><input class="form-control" name="fare" placeholder="Fare" value="<%= results[i].fare %>"></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                    <button name="op" type="submit" class="btn btn-success add-btn" value="modify" onClick="alert('Flight Successfuly Modified')">Modify</button>
                    <a href="/admin_flights"><button type="button" class="btn btn-warning">Back</button></a>
                </div>
            </div>
        </form>
    <% } %>

