    <!-- Section Selection -->
    <h1 id="flighthead">Seats</h1> 

    <form action="/admin_seats" method="post">
        <div class="container">
            <div class="row">
                <div class="col-md-12 card">
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Flight ID</th>
                                <th scope="col">Seat Type</th>
                                <th scope="col">Class</th>
                                <th scope="col">Fare</th>
                                <th scope="col">Status</th>
                                <th scope="col">Select</th>
                            </tr>
                            </thead>
                            <tbody>
                                <% for(var i = 0; i < results.length; i++) { %>
                                    <tr>
                                        <th scope="row"><%= results[i].seat_no %></th>
                                        <td><%= results[i].flight_id %></td>
                                        <td><%= results[i].seat_type %></td>
                                        <td><%= results[i].class %></td>
                                        <td><%= results[i].fare %></td>
                                        <td><%= results[i].status %></td>
                                        <td><input name="selectedseat" style="margin-left:1rem" type="checkbox" value="<%= results[i].seat_no %>"/></td>
                                    </tr>
                                <% } %> 
                            </tbody>
                        </table>
                        <button name="op" type="submit" class="btn btn-success add-btn" value="add">Add</button>
                        <button name="op" type="submit" class="btn btn-warning modify-btn" value="modify">Modify</button>
                        <button name="op" type="submit" class="btn go-btn delete-btn" value="delete" onClick="alert('Flight Deleted Successfully!')">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

